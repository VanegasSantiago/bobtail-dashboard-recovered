# ============================================================================
# DATABASE
# ============================================================================
# PostgreSQL connection string
# For Railway: This is provided automatically when you add a PostgreSQL service
# For local development: Use a local PostgreSQL instance or cloud database
DATABASE_URL="postgresql://user:password@localhost:5432/bobtail_collections"

# ============================================================================
# HAPPYROBOT API CONFIGURATION (Required)
# ============================================================================
# Your HappyRobot API key for authentication
HAPPYROBOT_API_KEY="your-happyrobot-api-key"

# The webhook endpoint to trigger calls
# Format: https://platform.happyrobot.ai/api/v1/workflows/{workflow_id}/trigger
HAPPYROBOT_ENDPOINT="https://platform.happyrobot.ai/api/v1/workflows/your-workflow-id/trigger"

# Your HappyRobot organization ID (found in platform settings)
HAPPYROBOT_ORG_ID="your-org-id"

# ============================================================================
# PUBLIC CONFIGURATION (For UI links)
# ============================================================================
# Organization slug for building run URLs in the UI
NEXT_PUBLIC_HAPPYROBOT_ORG_SLUG="your-org-slug"

# Workflow ID for building run URLs in the UI
NEXT_PUBLIC_HAPPYROBOT_WORKFLOW_ID="your-workflow-id"

# ============================================================================
# AUTHENTICATION (Required)
# ============================================================================
# NextAuth secret - generate with: openssl rand -base64 32
AUTH_SECRET="generate-a-secret-here"

# Your app URL (for callbacks) - Railway sets this automatically in production
NEXTAUTH_URL="http://localhost:3000"

# Admin email - this user ALWAYS has admin access (hardcoded)
ADMIN_EMAIL="arav@happyrobot.ai"

# Resend API key for sending magic link emails
# Get yours at: https://resend.com/api-keys
RESEND_API_KEY="re_xxxxx"

# Email "from" address (must be verified in Resend, or use onboarding@resend.dev for testing)
EMAIL_FROM="Bobtail Collections <onboarding@resend.dev>"

# Google OAuth (optional but recommended for easier sign-in)
# Get yours at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# ============================================================================
# OPTIONAL SETTINGS
# ============================================================================
# Max concurrent calls to process at once (default: 25)
# Lower this if you're hitting rate limits
MAX_CONCURRENT_CALLS="25"

# Node environment (Railway sets this automatically)
# NODE_ENV="production"
